<%= form_tag(new_admin_company_path, method: :get) do %>
  <br><p style="color:#5E6469;padding-left: 20px;">Import Contact From GoCardless</p><br>
  <div id="form-body">
    <%= text_field_tag 'go_cardless_reference', @import, placeholder: "Enter a GoCardless Ref No..." %>
    <%= submit_tag 'Import', id: "stock-submit-btn" %>
  </div>
<% end %>

<style>
  form {
    background-color: white;
    border-radius: 2px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.24), 0 0 2px rgba(0, 0, 0, 0.15);
    margin-bottom:20px;
  }

  #form-body {
    display: flex;
    padding:0 20px 20px 20px;
  }

  #go_cardless_reference {
    width: 100%;
    border-radius: 3px;
    border: 1px solid #d3d3d3;
    box-shadow: inset 1px 1px 1px rgba(34, 34, 34, 0.08);
    padding:10px;
  }
</style>
