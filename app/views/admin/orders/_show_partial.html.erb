    background:#8BAA8B;
    font-weight: bold;
    letter-spacing: 0.15em;
    color:white;
  }

  .consign {
    margin-top: 20px;
  }

  .consign:hover {
    cursor:pointer;
  }

  .consign-item {
    margin-top: 20px;
  }
</style>


<script>
  $('.consign').hide()
  $('.view-consigns').on('click',function(){
    $('.consign').toggle()
  })
  $('.consign').each(function(index){
    $('.consign-item-'+index).hide()
    $('.consign-'+index).on('click',function(){
      $('.consign-item-'+index).toggle()
    })
  })
</script>





