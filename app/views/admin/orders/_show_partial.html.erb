  }

  .custom-btn:hover {
    color: white;
    background: #00c9b6;
    outline: none;
  }

  .Incomplete {
  background:#FFA339;
  font-weight:bold;
  letter-spacing: 0.15em;
  color:white;
  /*color:#918f8a;*/
  }

