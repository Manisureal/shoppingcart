<%= simple_form_for [:admin,@order] do |f| %>
  <table style="color:#696969;">
    <tr style="display:flex;justify-content:space-around;">
      <th>Product Code</th>
      <th>Description</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Pack Size</th>
      <th>Total Price</th>
      <!-- <td></td> -->
